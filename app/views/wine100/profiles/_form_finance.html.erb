  </div>
</div>

<div class="control-group">
<%= f.label :finance_phone, "#{t('telephone')}:" %>
  <div class="controls">
    <%= f.text_field :finance_phone, :placeholder => t('telephone'), :class => 'span6' %>
		<span class="red">*</span>
  </div>
</div>
