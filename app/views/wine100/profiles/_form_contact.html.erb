<div class="page-header">
	<h2><%= t('contact_information') %></h2>
</div>
<div class="alert">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<%= t('main_contact') %>
</div>

<div class="control-group">
	<%= f.label :contact_name, "#{t('name')}:" %>
	<div class="controls">	
		<%= f.text_field :contact_name, :placeholder => t('name'), :class => 'span6', :required => true %>
		<span class="red">*</span>
	</div>
</div>
<div class="control-group">
	<%= f.label :contact_job, "#{t('position')}:" %>
	<div class="controls">
		<%= f.text_field :contact_job, :placeholder => t('position'), :class => 'span6', :required => true %>
		<span class="red">*</span>
	</div>
</div>

<div class="control-group">
	<%= f.label :contact_phone, "#{t('telephone')}:" %>
	<div class="controls">
		<%= f.text_field :contact_phone, :placeholder => t('telephone'), :class => 'span6', :required => true %>
		<span class="red">*</span>
	</div>
</div>
<div class="control-group">
	<%= f.label :contact_email, "#{t('email')}:" %>
	<div class="controls">
		<%= f.email_field :contact_email, :placeholder => t('email'), :class => 'span6', :required => true %>
		<span class="red">*</span>
	</div>
</div>
