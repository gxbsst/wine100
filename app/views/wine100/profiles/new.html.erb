<div class="row-fluid">
	<%= render 'wine100/accounts/sidebar' %>
	<div class="span9">

		<%= render 'step_by_step' %>
		
		<%= form_for @profile, :url => wine100_profiles_path(:for => params[:for]), :class => 'form-signin' do |f| %>

		<% if params[:for] == 'contact'  %>
		<%= render 'form_contact', :f => f %>
		<% end %>
		<% if params[:for] == 'company' %>
		<%= render 'form_company', :f => f %>
		<% end %>
		<% if params[:for] == 'finance' %>
		<%= render 'form_finance', :f => f %>
		<% end %>

		<% if params[:for] == 'contact' %>
		<button class="btn btn-large btn-primary" type="submit"><%= t('complete_invoice_information') %> 》</button>
		<% elsif params[:for] == 'company' %>
		<button class="btn btn-large btn-primary" type="submit"><%= t('complete_the_contact_information') %>》</button>
		<% else %>
		<button class="btn btn-large btn-primary" type="submit"><%= t('complete_registration_information') %> 》</button>
		<% end %>
		<% end %>

	</div><!--/span-->
</div>
