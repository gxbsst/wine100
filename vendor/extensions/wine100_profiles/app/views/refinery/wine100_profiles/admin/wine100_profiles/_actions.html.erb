<ul>
  <% if ::Refinery::Wine100Profiles::Admin::Wine100ProfilesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.wine100_profiles_admin_wine100_profiles_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_wine100_profiles_admin_wine100_profile_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Wine100Profiles::Admin::Wine100ProfilesController.sortable? && ::Refinery::Wine100Profiles::Wine100Profile.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Wine100 Profiles"),
                 refinery.wine100_profiles_admin_wine100_profiles_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Wine100 Profiles"),
                 refinery.wine100_profiles_admin_wine100_profiles_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
