<div class="page-header">
  <h2>公司信息</h2>
</div>

<div class="control-group">
  <%= f.label :company_name_zh, "公司名称:" %>
  <div class="controls">
    <%= f.text_field :company_name_zh, :placeholder => '公司名称', :class => 'span6', :required => true %>
		<span class="red">*</span>
  </div>
  <!--
  <div class="controls">
    <%= f.text_field :company_name_en, :placeholder => '名称( 英文 )', :class => 'span6', :required => true %>
		<span class="red">*</span>
  </div>
  -->
</div>

<div class="control-group">
  <%= f.label :company_add, "公司地址:" %>
  <div class="controls">
    <%= f.text_field :company_add, :placeholder => '公司地址', :class => 'span6', :required => true %>
		<span class="red">*</span>
  </div>
</div>


<div class="control-group">
  <%= f.label :company_phone, "公司电话:" %>
  <div class="controls">
    <%= f.text_field :company_phone_area_code, :placeholder => '区号', :class => 'span1', :required => false %>
    <%= f.text_field :company_phone, :placeholder => '公司电话', :class => 'span6', :required => true %>
		<span class="red">*</span>
  </div>
</div>

<div class="control-group">
  <%= f.label :company_website, "公司网址(选填):" %>
  <div class="controls">
     <span class="add-on">http://</span>
    <%= f.text_field :company_website, :placeholder => '公司网址', :class => 'span6', :required => false %>
  </div>
</div>

<div class="control-group">
 <%= f.label :company_wines_count, "您目前的产品线里一共拥有多少款葡萄酒？(选填):" %>
  <div class="controls">
    <%= f.text_field :company_wines_count, :placeholder => '可销售葡萄酒款数', :class => 'span6' %>
  </div>		
</div>
